<h1>商品詳細</h1>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%=attachment_image_tag @item,:image,:fill, 60, 60, fallback: "no_image.jpg"%>
    </div>

    <div class='col-md-8 offset-md-1'>
      <table class="table">
        <tbody>

          <tr>
           <th>商品名</th>
           <th><%= @item.name %></th>
          </tr>

          <tr>
        　 <th>商品説明</th>
           <th><%= @item.introduction %></th>
          </tr>

          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>

          <tr>
           <th>税込価格<p>（税別価格）</p></th>
           <th> <%= convert_to_taxed(@item.price) %>(<%= @item.price %>)円</th>
          </tr>

          <tr>
           <th></th>
           <th>
        　　<% if @item.is_active %>
        　　販売中
        　　<% else %>
        　　販売中止
        　　<% end %>
      　  　 </th>
           </tr>
          </tr>
        </tbody>
      </table>
      <div class="col-xs-5">
          <strong class="error text-danger"><%= notice %></strong>
          <%= form_with model: @cart_item,  required: true , local: true  do |f| %>
          <%= f.hidden_field :item_id  , :value => @item.id%>
          <%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 20 %>
          <%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
          <% end %>
      </div>
    </div>
  </div>
</div>


