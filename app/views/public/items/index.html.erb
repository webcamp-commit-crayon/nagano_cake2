<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>商品</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item_path(item) do %>
          <%= attachment_image_tag(item, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to item.title, item_path(item), class: "item_#{item.id}" %></td>
        <td><%= item.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>