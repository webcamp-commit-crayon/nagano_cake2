<div class="container">
    <h3>注文履歴詳細</h3>
    <div class="row">
        <div class="col-md-7">
            <table class="table table-striped">
                <tr>注文情報</tr>
                <tr><th>注文日</th><th><%= @order.create.at.strftime("%Y/%m/%d") %></th></tr>
                <tr><td>配送先</td><td><%= @order.postal_code %>
                <%= @order.name %>
                <%= @order.address %></td></tr>
                <tr><td>支払方法</td><td><%= @order.payment_method_i18n %></td></tr>
                <tr><td>ステータス</td><td><%= @order.order_status_i18n %></td></tr>
            </table>
        </div>
                <div class="col-md-3">
                    <table class="table table-striped">
                        <tr>請求情報</tr>
                        <tr><th>商品合計</th>
                            <th><%= @order.total_amount %></th>
                        </tr>
                        <tr><td>配送料</td>
                            <td><%= @order.shipping_cost %></td>
                        </tr>
                        <tr>
                            <td>ご請求額</td>
                            <td><%= @order.total_payment %></td>
                        </tr>
                    </table>
                </div>
    </div>
    
    
<div class="row">
    <div class="col-md-9">
        <table class="table table-striped">
            <tr>注文内容</tr>
            <tr>
                <th>商品</th>
                <th>単価</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
            
            <% @order.order_products.each do |t| %>
            <tr>
                <td><%= t.item.item_name %></td>
                <td><%= t.tax_included %></td>
                <td><%= t.amount %></td>
                <td><%= t.total_payment * t.amount %></td>
            </tr>
            <% end %>
        </table>
    </div>
</div>
</div>
