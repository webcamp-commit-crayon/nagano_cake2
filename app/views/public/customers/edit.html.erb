<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h3 class="m-3">会員情報編集画面</h3>
    <%= form_with model:@customer, local:true do |f| %>
      <div class="form-group">
        <%= f.label :氏名 %>
        <%= f.text_field :last_name, class: "form-control name" %><%= f.text_field :first_name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :カナ %>
        <%= f.text_field :last_name_kana, class: "form-control name" %><%= f.text_field :first_name_kana, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :郵便番号%>
        <%= f.text_field :postal_code, class: "form-control name" %>
      </div>
       <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_field :email, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit '更新する',class: 'btn btn-primary' %>
        <%= link_to "退会する", unsubscribe_customer_path,class: 'btn btn-danger' %>
        </div>
    </div>
  </div>
</div>
    <% end %>