<div class="container">
<h3 class="m-4">配送先登録/一覧</h3>
  <%= form_with model:@address, local:true do |f| %>
  <table class="table table-bordered">
    <div class="form-group">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.label :住所 %>
      <%= f.text_field :address, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.label :宛名 %>
      <%= f.text_field :name, class: "form-control name" %>
    </div>
    <div class="form-group">
      <%= f.submit '変更する', class: 'btn btn-success' %>
    </div>
  </table>
  <% end %>
</div>