<div class="container">
<h3 class="m-4">配送先登録/一覧</h3>
<%= form_with model:@address, local:true do |f| %>
<table class="table table-bordered">
      <div class="form-group">
        <%= f.label :郵便番号（ハイフンなし） %>
        <%= f.text_field :postal_code, class: "form-control name" %>
      </div>
       <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :宛名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.submit '登録する', class: 'btn btn-primary' %>
      </div>
    </table>
     <% end %>

     <table class="table-bordered table-striped">
  <thead class="thead-dark">
    <tr>
      <th class="text-center",style="width: 20%">郵便番号</th>
      <th class="text-center",style="width: 40%">住所</th>
      <th class="text-center",style="width: 20%">宛名</th>
      <th class="text-center",style="width: 20%"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td class="text-center",style="width: 20%"><%= address.postal_code %></td>
        <td class="text-center",style="width: 40%"><%= address.address %></td>
        <td class="text-center",style="width: 20%"><%= address.name %></td>
        <td style="width: 20%">
       <label> <%= link_to "編集する", edit_address_path(address), class: 'btn btn-success btn-sm' %></label>
       <label> <%= link_to "削除する", address_path(address), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-danger btn-sm' %></label>
     </td>
    </div>
      <% end %>
</tbody>
</table>