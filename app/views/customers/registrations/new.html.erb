<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h4 style="margin-bottom: 20px; padding: 10px;">会員登録</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customers/shared/error_messages", resource: resource %>

          <div class="form-group">
            <label>姓</label>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %><br>
            <label>名</label>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>

          <div class="form-group">
            <label>セイ</label>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %><br>
            <label>メイ</label>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>

          <div class="form-group">
            <label>郵便番号（ハイフンなし）</label><br>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",class: "form-control name" %>
          </div>

           <div class="form-group">
            <label >住所</label><br>
            <%= f.text_area :address, autofocus: true, autocomplete: "address", class: "form-control introduction" %>
          </div>

          <div class="form-group">
            <label>電話番号</label><br>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>メールアドレス</label><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>パスワード</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <label>パスワード（確認用）</label><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class:"btn btn-success", style:"display:block; margin: 0 auto;"%>
          </div>
          <%= link_to new_customer_session_path do %>
            <span class="glyphicon glyphicon-chevron-left">ログインはこちら</span>
          <% end %>
      <% end %>

    </div>
  </div>
</div>


