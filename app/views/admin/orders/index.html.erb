<h1 class="order pt-1 pl-3">注文履歴一覧</h1>

<div class="container px-5 px-sm-0">
  <div class="row">

  <table class="table table-hover table-inverse">

  <thead>
    <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    </tr>
  </thead>


  <tbody>
<% @orders.each do |order| %>
<tr>
  <td><%= link_to order.created_at, order_details_path %></td>
  <td><%=order.customer.last_name %><%= order.customer.first_name %></td>
  <td><%=order.order_detail.amount %></td>
  <td><%=order.status %></td>
</tr>
<% end %>

</tbody>

</table>

</div>
</div>
</div>
