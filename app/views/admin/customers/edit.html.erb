<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2><%=@customer.last_name %><%=@customer.first_name %>さんの会員情報編集</h2>
    <%= form_with model:@customer, url: admin_customer_path(@customer),local:true do |f| %>
     <div class="form-group">
        <%= f.label :"会員ID" %>
        <%=@customer.id %>
      </div>
      <div class="form-group">
        <%= f.label :"氏名" %>
        <%= f.text_area :last_name, class: "form-control last_name" %>
        <%= f.text_area :first_name, class: "form-control first_name" %>
      </div>
      <div class="form-group">
        <%= f.label :"フリガナ" %>
        <%= f.text_area :last_name_kana, class: "form-control last_name_kana" %>
        <%= f.text_area :first_name_kana, class: "form-control first_name_kana" %>
      </div>
      <div class="form-group">
        <%= f.label :"郵便番号" %>
        <%= f.text_area :postal_code, class: "form-control postal_code" %>
      </div>
      <div class="form-group">
        <%= f.label :"住所" %>
        <%= f.text_area :address, class: "form-control address"%>
      </div>
      <div class="form-group">
        <%= f.label :"電話番号" %>
        <%= f.text_area :phone_number, class: "form-control phone_number"%>
      </div>
      <div class="form-group">
        <%= f.label :"メールアドレス" %>
        <%= f.text_area :email, class: "form-control email"%>
      </div>
      <div class="form-group">
        <%= f.label :"会員ステータス" %>
        <%= f.radio_button :is_valid,false,checked: !@customer.is_valid %>退会
        <%= f.radio_button :is_valid,true,checked: @customer.is_valid %>有効
      </div>
      <div class="form-group">
        <%= f.submit'更新する',  :class=>"button" %>
      </div>
    <% end %>
  </div>
</div>
