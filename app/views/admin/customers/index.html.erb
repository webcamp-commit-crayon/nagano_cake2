<%= render 'admin/items/header' %>

<h1>会員一覧</h1>

<div class="container px-5 px-sm-0">
  <div class="row">

  <table class="table table-hover table-inverse">

  <thead>
    <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    </tr>
  </thead>


  <tbody>
<% @customers.each do |customer| %>
<tr>
  <td><%=customer.id %></td>
  <td>
    <%=customer.last_name %><%=customer.first_name %>
  </td>
  <td> <%=customer.email %></td>
  <td></td>
</tr>
<% end %>

</tbody>

</table>

</div>
</div>
</div>