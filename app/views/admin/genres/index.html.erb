<%= render 'admin/items/flash', item: @genre %>
<h1>ジャンル一覧　追加</h1>
<div class="container">
  <div class="row">
      <div class="mr-3 pt-3">
        <p>ジャンル名</p>
      </div>
       <%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
      <div class="mr-3 pt-3">
       <%= f.text_field :name, placeholder:"ジャンル名" %>
      </div>
      <div class="pt-3">
       <%= f.submit'新規投稿', class: 'button btn-sm'%>
      </div>
      <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3">
    <table class="table table-hover table-inverse ">
      <thead>
         <tr>
          <th height="50" style="border:none;">ジャンル</th>
         </tr>
      </thead>
      <tbody>
       <% @genres.each do |genre| %>
         <tr>
           <td height="50" width=150><%= genre.name %></td>
           <td height="50">
             <%= link_to edit_admin_genre_path(genre) do %>
              <button class="button btn-sm">編集する</button>
             <% end %>
           </td>
         </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
 </div>
