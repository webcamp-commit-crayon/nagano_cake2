<h3>ジャンル一覧　追加</h3>
<%= form_with model: @genre, url: admin_genres_path, method: :post, local:true do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name, placeholder:"ジャンル名" %>
  <%= f.submit'新規投稿' %>
<% end %>

       <table>
            <thead>
               <tr>
                <th></th><th>ジャンル</th>
               </tr>
            </thead>
            <tbody>
            　<% @genres.each do |genre| %>
               <tr>
                 <td><%= genre.name %></td>
                 <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
               </tr>
              <% end %>
            </tbody>
           </table>
